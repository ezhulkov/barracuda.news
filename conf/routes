
GET           /                         controllers.FrontendController.index
GET           /topic/:name              controllers.FrontendController.topic(name:String)
GET           /article                  controllers.FrontendController.article
GET           /about                    controllers.FrontendController.about
GET           /adv                      controllers.FrontendController.adv
GET           /contacts                 controllers.FrontendController.contacts
POST          /search                   controllers.FrontendController.search(q:String)

GET           /admin                    controllers.AdminController.index
GET           /admin/layout             controllers.AdminController.layout
GET           /admin/article            controllers.AdminController.articleNew
GET           /admin/article/:id        controllers.AdminController.article(id:Long)
DELETE        /admin/article/:id        controllers.AdminController.articleDelete(id:Long)
PUT           /admin/article            controllers.AdminController.articleSave
POST          /admin/article            controllers.AdminController.articleCreate

GET           /assets/*file             controllers.Assets.versioned(path="/public", file: Asset)
